<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/colorBackground</item>
    </style>

    <style name="CustomDialogButton" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/colorText</item> <!-- Цвет текста -->
        <item name="android:background">@color/colorBackground</item> <!-- Цвет фона -->
    </style>

    <!-- Style for ImageButton -->
    <style name="ImageButtonStyle">
        <item name="android:backgroundTint">@color/colorAccent</item>
        <item name="android:tint">@color/colorPrimary</item>
    </style>
</resources>